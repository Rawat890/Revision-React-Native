{
  "compilerOptions": {
    "module": "nodenext",
    "target": "esnext",
    "types": [],
    "sourceMap": true,
    "declaration": true,
    "declarationMap": true,

    // Stricter Typechecking Options
    "noUncheckedIndexedAccess": true,
    "exactOptionalPropertyTypes": true,

    // Type Safety
    "strict": true,
    "strictNullChecks": false, // ðŸ‘ˆ Allow possibly undefined/null, but still show warnings

    // React/JSX
    "jsx": "react-jsx",

    // Module Behavior
    "verbatimModuleSyntax": true,
    "isolatedModules": true,
    "noUncheckedSideEffectImports": true,
    "moduleDetection": "force",

    // Speed
    "skipLibCheck": true
  }
}
